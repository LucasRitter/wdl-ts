{
    "compilerOptions": {
        "target": "ES2018",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "types": [
            "typescript-to-lua/language-extensions",
            "@lucasritter/wdl-types"
        ],
        "strict": true,
        "outDir": "build"
    },
    "tstl": {
        "luaTarget": "5.1",
        "noImplicitSelf": true,
        "luaLibImport": "inline",
        "luaBundle": "main.lua",
        "luaBundleEntry": "src/main.ts"
    }
}
